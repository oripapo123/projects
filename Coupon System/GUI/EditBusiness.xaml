<Window x:Class="GUI.EditBusiness"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EditBusiness" Height="350" Width="525"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Grid Margin="0,0,0,0">
        <Button Content="Back" HorizontalAlignment="Left" Height="27" Margin="10,285,0,0" VerticalAlignment="Top" Width="41" Click="Button_Click_1"/>

        <DataGrid Name="BusinessGrid" ItemsSource="{Binding}" HorizontalAlignment="Left" Height="191" Margin="0,89,0,0" VerticalAlignment="Top" Width="509" SelectionChanged="BusinessGrid_SelectionChanged"/>
        <Button Name ="ShowBusinesses" Content="Show Businesses" HorizontalAlignment="Left" Height="36" Margin="322,31,0,0" VerticalAlignment="Top" Width="157" Click="Button_Click"/>
        <Button Name="Edit" Content="Edit" HorizontalAlignment="Left" Height="36" Margin="27,10,0,0" VerticalAlignment="Top" Width="100" Click="Edit_Click"/>
        <Button Name ="Remove" Content="Remove" HorizontalAlignment="Left" Height="36" Margin="27,46,0,0" VerticalAlignment="Top" Width="100" Click="Remove_Click"/>
    </Grid>
</Window>
